<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/base_btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/base_btn1" />

    <Button
        android:id="@+id/base_btn2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/base_btn2" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/base_btn1"
        android:layout_above="@id/base_btn2"
        android:text="@string/btn1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/base_btn1"
        android:text="@string/btn1" />

</RelativeLayout>